{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es5",
    "lib": ["dom", "es7"],
    "allowJs": true,
    "rootDirs": ["components", "stories"],
    "noEmit": true
  },
  "exclude": ["node_modules", "lib", "es"]
}